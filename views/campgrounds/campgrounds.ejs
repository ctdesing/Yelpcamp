<div class="container">
	<header class="jumbotron">
		<h1>Camp Grounds</h1>
		<p class="lead">View our hand-picked campgrounds from all over the world.</p>
	</header>
	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(ground){ %>
			<div class="col-xs- col-sm-6 col-md-4 col-lg-3">
				<div class="thumbnail">
					<a href="/campgrounds/<%= ground._id %>">
						<img class="allimages" src="/images/<%=ground.image%>">
					</a>
					<div class="caption">
						<a href="/campgrounds/<%= ground._id %>"><%= ground.name %></a>
						<p></p>
						<a href="/campgrounds/<%= ground._id %>" class="btn btn-info">Learn More</a>
					</div>
				</div>
			</div>
		<% }); -%>
	</div>
</div>

<script>
	document.getElementById('campground-nav').classList.add('active');
</script>